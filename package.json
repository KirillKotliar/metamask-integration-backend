{
  "name": "metamask-integration-backend",
  "version": "1.0.0",
  "description": "",
  "author": "Kirill Kotliar",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "dev": "ts-node-dev --files src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "tsc": "npx tsc --noEmit",
    "test-ci": "npm run lint && npm run tsc",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migrate:gen": "npm run typeorm -- migration:generate -d ormconfig.ts src/database/migrations/$npm_config_name",
    "migrate:add": "npm run typeorm -- migration:create src/database/migrations/$npm_config_name",
    "migrate:up": "npm run typeorm -- migration:run -d ormconfig.ts",
    "migrate:down": "npm run typeorm -- migration:revert -d ormconfig.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.1",
    "@nestjs/core": "^10.0.1",
    "@nestjs/platform-express": "^10.0.1",
    "@nestjs/schedule": "^3.0.1",
    "@nestjs/swagger": "^7.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "@wavesenterprise/env-extractor": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.6.8",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.6.0",
    "siwe": "^2.1.4",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.1",
    "@nestjs/schematics": "^10.0.1",
    "@types/cron": "^2.0.1",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.4",
    "@types/node": "^18.11.14",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@wavesenterprise/eslint-config": "^0.3.6",
    "eslint": "^8.37.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  }
}
